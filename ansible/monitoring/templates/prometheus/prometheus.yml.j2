global:
  scrape_interval:     10s
  evaluation_interval: 10s

scrape_configs:
# Prometheus
  - job_name: prometheus
    scheme: https
    scrape_interval: 5s
    static_configs:
      - targets: [
      'prom.monitoring.de-marauder.me'
          ]
# grafana
  - job_name: grafana
    scheme: https
    scrape_interval: 5s
    static_configs:
      - targets: [
      'grafana.monitoring.de-marauder.me'
          ]
# Node exporter
  - job_name: 'node_exporter'
    scheme: https
    scrape_interval: 5s
    static_configs:
      - targets: [
      'node.monitoring.de-marauder.me',
      'node.app.de-marauder.me',
      'node.db.de-marauder.me'
          ]
    tls_config:
      insecure_skip_verify: true
#    basic_auth:
#      username: {{ htaccessusr }}
#      password: {{ htaccesspwd }}
# Docker metrics server
  - job_name: 'docker_metrics'
    scheme: https
    scrape_interval: 5s
    static_configs:
      - targets: [
      'docker.monitoring.de-marauder.me',
      'docker.app.de-marauder.me',
      'docker.db.de-marauder.me'
          ]
    tls_config:
      insecure_skip_verify: true
#    basic_auth:
#      username: {{ htaccessusr }}
#      password: {{ htaccesspwd }}
# Cadvisor
  - job_name: 'cadvisor'
    scrape_interval: 5s
    scheme: https
    static_configs:
      - targets: [
      'cadvisor.monitoring.de-marauder.me',
      'cadvisor.app.de-marauder.me',
      'cadvisor.db.de-marauder.me'
          ]
    tls_config:
      insecure_skip_verify: true
#    basic_auth:
#      username: {{ htaccessusr }}
#      password: {{ htaccesspwd }}
# Blackbox
  - job_name: 'blackbox'
    metrics_path: /probe
    params:
      module: [http_2xx]
    static_configs:
      - targets: [
        'prom.monitoring.de-marauder.me',
        'grafana.monitoring.de-marauder.me',
        'app.de-marauder.me'
        'db.de-marauder.me'
        ]
    relabel_configs:
    - source_labels: [__address__]
      target_label: __param_target
    - source_labels: [__param_target]
      target_label: instance
    - target_label: __address__
      replacement: blackbox:9115  # The blackbox exporter's real hostname:port.
